@using MyMovieList.Core.Models
@model UserSuggestionViewModel
@{
    ViewData["Title"] = "Suggestion";
}

<div class="row">
    <div class="col-4">
        <form id="edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="Type" class="form-label"></label>
                <input asp-for="Type" class="form-control" aria-required="true" placeholder="Enter Movie or TVShow" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-4">
                    <button id="login-submit" type="submit" class="button">Submit</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
